.macro mapper_init_impl

    ; set PRG mode
    lda MMC5_PRG_MODE_0_1x_32KB
    sta MMC5_PRG_MODE

    ; set CHR mode
    lda MMC5_CHR_MODE_1_4KB
    sta MMC5_CHR_MODE

    ; set CHR banks
    lda #0
    sta MMC5_CHR_ROM_4KB_OAM_BANK0
    lda #1
    sta MMC5_CHR_ROM_4KB_OAM_BANK1


