    ;sta MMC5_CHR_ROM_BANK3

    ; use extended RAM mode
    lda MMC5_EXT_RAM_MODE_0
    sta MMC5_EXT_RAM_MODE

    ; mapping
    _lda_make_nametable_mapping 0, 1, 0, 1
    sta MMC5_NAMETABLE_MAPPING

