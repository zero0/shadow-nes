    ;sta MMC5_CHR_ROM_BANK3
    ;sta MMC5_CHR_ROM_BANK4
    ;sta MMC5_CHR_ROM_BANK5
    ;sta MMC5_CHR_ROM_BANK6
    ;sta MMC5_CHR_ROM_BANK7

    ;lda #$00
