;
.macro _lda_make_nametable_mapping  nt20, nt24, nt28, nt2C

    .local _nt20, _nt24, _nt28, _nt2C

    .ifnblank nt20
    _nt20 = nt20 & $03
    .else
    _nt20 = 0
    .endif

    .ifnblank nt24
    _nt24 = (nt24 & $03) << 2
    .else
    _nt24 = 0
    .endif

    .ifnblank nt28
    _nt28 = (nt28 & $03) << 4
    .else
    _nt28 = 0
    .endif

    .ifnblank nt2C
    _nt2C = (nt2C & $03) << 6
    .else
    _nt2C = 0
    .endif

    lda #( _nt2C | _nt28 | _nt24 | _nt20 )

.endmacro

