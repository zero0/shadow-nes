{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build NES project",
            "type": "shell",
            "command": "./build.bat shadow",
            "problemMatcher": [
                {
                    "owner": "nesdev",
                    "pattern": [
                        {
                            "regexp": "^([^:]*):([0-9]+): ?([^:]*): ?(.*)$",
                            "file": 1,
                            "location": 2,
                            "severity": 3,
                            "message": 4
                        }
                    ]
                },
                {
                    "owner": "nesdev",
                    "pattern": [
                        {
                            "regexp": "^([^:]*)\\(([0-9]+)\\): ?([^:]*): ?(.*)$",
                            "file": 1,
                            "location": 2,
                            "severity": 3,
                            "message": 4
                        }
                    ]
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}